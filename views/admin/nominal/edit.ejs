<html lang="en">
  <% include ../../partials/header.ejs %>

  <body class="hold-transition sidebar-mini layout-fixed">
    <div class="wrapper">
      <% include ../../partials/navbar.ejs %> <%include
      ../../partials/sidebar.ejs %>

      <div class="content-wrapper">
        <section class="content-header">
          <div class="container-fluid">
            <div class="row mb-2">
              <div class="col-sm-6">
                <h1>Nominal</h1>
              </div>
              <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                  <li class="breadcrumb-item"><a href="/">Home</a></li>
                  <li class="breadcrumb-item">
                    <a href="/nominal">Nominal</a>
                  </li>
                  <li class="breadcrumb-item active">Ubah</li>
                </ol>
              </div>
            </div>
          </div>
          <!-- /.container-fluid -->
        </section>

        <section class="content">
          <div class="container-fluid">
            <div class="row">
              <div class="col-12">
                <div class="card card-primary">
                  <div class="card-header">
                    <h3 class="card-title">
                      Form ubah nominal "<%= nominal.coinName %>"
                    </h3>
                  </div>
                  <!-- /.card-header -->
                  <!-- form start -->
                  <form
                    method="post"
                    action="/nominal/edit/<%= nominal._id %>?_method=PUT"
                  >
                    <div class="card-body">
                      <div class="form-group">
                        <label>Nama Koin</label>
                        <select
                          class="form-control select2"
                          style="width: 100%"
                          name="coinName"
                          value="<%= nominal.coinName  %> "
                          required
                        >
                         
                          <option value="Gold" <% if(nominal.coinName=="Gold") {%> selected <% } %>    >Gold</option>
                          <option value="Diamond" <% if(nominal.coinName=="Diamond") {%> selected <% } %>  >Diamond</option>
                          <option value="Jewel" <% if(nominal.coinName=="Jewel") {%> selected <% } %>  >Jewel</option>
                        </select>
                      </div>
                      <div class="form-group">
                        <label for="coinQuantity">Jumlah Koin</label>
                        <input
                          type="number"
                          class="form-control"
                          id="coinQuantity"
                          placeholder="Masukkan Jumlah koin"
                          required
                          name="coinQuantity"
                          value="<%= nominal.coinQuantity %>"
                        />
                      </div>
                      <div class="form-group">
                        <label for="price">Harga</label>
                        <input
                          type="number"
                          class="form-control"
                          id="price"
                          placeholder="Masukkan Jumlah harga"
                          required
                          name="price"
                          value="<%= nominal.price %>"
                        />
                      </div>
                    </div>
                    <!-- /.card-body -->

                    <div class="card-footer">
                      <button type="submit" class="btn btn-primary">
                        Simpan
                      </button>
                    </div>
                  </form>
                </div>
              </div>
            </div>
          </div>
        </section>
      </div>

      <% include ../../partials/footer.ejs %>
    </div>

    <%include ../../partials/js.ejs %>
  </body>
</html>
