<html lang="en">
  <% include ../../partials/header.ejs %>

  <body class="hold-transition sidebar-mini layout-fixed">
    <div class="wrapper">
      <% include ../../partials/navbar.ejs %> <%include
      ../../partials/sidebar.ejs %>

      <div class="content-wrapper">
        <section class="content-header">
          <div class="container-fluid">
            <div class="row mb-2">
              <div class="col-sm-6">
                <h1>Ubah Bank</h1>
              </div>
              <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                  <li class="breadcrumb-item"><a href="/">Home</a></li>
                  <li class="breadcrumb-item">
                    <a href="/bank">Bank</a>
                  </li>
                  <li class="breadcrumb-item active">Ubah</li>
                </ol>
              </div>
            </div>
          </div>
          <!-- /.container-fluid -->
        </section>

        <section class="content">
          <div class="container-fluid">
            <div class="row">
              <div class="col-12">
                <div class="card card-primary">
                  <div class="card-header">
                    <h3 class="card-title">Form tambah kategori</h3>
                  </div>
                  <!-- /.card-header -->
                  <!-- form start -->
                  <form
                    method="post"
                    action="/bank/edit/<%= bank._id %>?_method=PUT"
                  >
                    <div class="card-body">
                      <div class="form-group">
                        <label id="name">Nama Pemilik</label>
                        <input
                          type="text"
                          class="form-control"
                          id="name"
                          placeholder="Masukkan nama pemilik"
                          required
                          name="name"
                          value="<%= bank.name %>"
                        />
                      </div>
                      <div class="form-group">
                        <label id="nameBank">Nama bank</label>
                        <input
                          type="text"
                          class="form-control"
                          id="nameBank"
                          placeholder="Masukkan nama bank"
                          required
                          name="nameBank"
                          value="<%= bank.nameBank %>"
                        />
                      </div>
                      <div class="form-group">
                        <label id="noRekening">No Rekening</label>
                        <input
                          type="number"
                          class="form-control"
                          id="noRekening"
                          placeholder="Masukkan nomor rekening"
                          required
                          name="noRekening"
                          value="<%= bank.noRekening %>"
                        />
                      </div>
                    </div>
                    <!-- /.card-body -->

                    <div class="card-footer">
                      <button type="submit" class="btn btn-primary">
                        Simpan
                      </button>
                    </div>
                  </form>
                </div>
              </div>
            </div>
          </div>
        </section>
      </div>

      <% include ../../partials/footer.ejs %>
    </div>

    <%include ../../partials/js.ejs %>
  </body>
</html>
