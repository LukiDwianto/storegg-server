<html lang="en">
  <% include ../../partials/header.ejs %>

  <body class="hold-transition sidebar-mini layout-fixed">
    <div class="wrapper">
      <% include ../../partials/navbar.ejs %> <%include
      ../../partials/sidebar.ejs %>

      <div class="content-wrapper">
        <section class="content-header">
          <div class="container-fluid">
            <div class="row mb-2">
              <div class="col-sm-6">
                <h1>Tambah Jenis Pembayaran</h1>
              </div>
              <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                  <li class="breadcrumb-item"><a href="/">Home</a></li>
                  <li class="breadcrumb-item">
                    <a href="/payment">Jenis Pembayaran</a>
                  </li>
                  <li class="breadcrumb-item active">Tambah</li>
                </ol>
              </div>
            </div>
          </div>
          <!-- /.container-fluid -->
        </section>

        <section class="content">
          <div class="container-fluid">
            <div class="row">
              <div class="col-12">
                <div class="card card-primary">
                  <div class="card-header">
                    <h3 class="card-title">Form tambah kategori</h3>
                  </div>
                  <!-- /.card-header -->
                  <!-- form start -->
                  <form method="post" action="/payment/create">
                    <div class="card-body">
                      <div class="form-group">
                        <label id="type">Tipe</label>
                        <input
                          type="text"
                          class="form-control"
                          id="type"
                          placeholder="Masukkan tipe"
                          required
                          name="type"
                        />
                      </div>

                      <div class="form-group">
                        <label>Bank</label>
                        <div class="select2-purple">
                          <select
                            class="form-control select2"
                            style="width: 100%"
                            name="banks"
                            required
                            multiple
                          >
                            <% bank.map((item)=>{ %>
                            <option value="<%= item._id %>">
                              <%= item.nameBank %>-<%= item.name %>-<%=
                              item.noRekening %>
                            </option>
                            <% }) %>
                          </select>
                        </div>
                      </div>
                    </div>
                    <!-- /.card-body -->

                    <div class="card-footer">
                      <button type="submit" class="btn btn-primary">
                        Simpan
                      </button>
                    </div>
                  </form>
                </div>
              </div>
            </div>
          </div>
        </section>
      </div>

      <% include ../../partials/footer.ejs %>
    </div>

    <%include ../../partials/js.ejs %>
  </body>
</html>
