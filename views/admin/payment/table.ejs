<div class="card">
  <div class="card-header">
    <h3 class="card-title">
      <a href="/payment/create" class="btn btn-primary">
        <i class="nav-icon far fa-plus-square"></i>
        Tambah
      </a>
    </h3>
  </div>
  <!-- /.card-header -->
  <div class="card-body">
    <table id="example2" class="table table-bordered table-hover">
      <thead>
        <tr>
          <th>No.</th>
          <th>Tipe pembayaran</th>
          <th>Status</th>
          <th>Bank</th>

          <th>Aksi</th>
        </tr>
      </thead>
      <tbody>
        <% payment.map((item,index)=>{ %>
        <tr>
          <td><%= index+1 %></td>
          <td><%= item.type %></td>
          <td>
            <% if(item.status==='Y'){ %>
            <span class="badge badge-success"> Aktif</span>
            <% }else{ %> <span class="badge badge-danger"> Tidak aktif</span><%
            } %>
          </td>
          <td>
            <% item.banks.map((item2)=>{ %>
            <span class="badge badge-warning">
              <%= item2.nameBank %>-<%= item2.name %>-<%= item2.noRekening %>
            </span>
            <% }) %>
          </td>
          <td>
            <form
              action="/payment/update-status/<%= item._id %>?_method=PUT"
              method="post"
              style="display: inline-block"
            >
              <% if(item.status==='Y'){ %>
              <button class="btn btn-primary btn-sm" type="submit">
                <i class="nav-icon far fa-folder"></i> Matikan
              </button>
              <% }else{ %>
              <button class="btn btn-primary btn-sm" type="submit">
                <i class="nav-icon far fa-folder"></i> Hidupkan</button
              ><% } %>
            </form>
            <form
              action="/payment/delete/<%= item._id %>?_method=DELETE"
              method="post"
              style="display: inline-block"
            >
              <a
                class="btn btn-info btn-sm"
                href="/payment/edit/<%= item._id %>"
              >
                <i class="nav-icon far fa-edit"></i> Ubah
              </a>
              <button class="btn btn-danger btn-sm">
                <i class="fas fa-trash"></i> Hapus
              </button>
            </form>
          </td>
        </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
  <!-- /.card-body -->
</div>
